<Window x:Class="PCInfoTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC Info" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Icon="PCInfo.ico" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="txtStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style x:Key="lblStyle" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>
        <Style x:Key="grpStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="PC Info Tool" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Network" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource grpStyle}">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Host name row -->
                <Label   Grid.Row="0" Grid.Column="0" Content="Host Name" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="txtHostName" Style="{StaticResource txtStyle}"/>
                
                <!-- IPv4 addresses row -->
                <Label   Grid.Row="1" Grid.Column="0" Content="IPv4 Addresses" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtIPv4Addresses" TextWrapping="Wrap" AcceptsReturn="True" Style="{StaticResource txtStyle}"/>
                
                <!-- IPv6 addresses row -->
                <Label Grid.Row="2" Grid.Column="0" Content="IPv6 Addresses" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="txtIPv6Addresses" TextWrapping="Wrap" AcceptsReturn="True" Style="{StaticResource txtStyle}"/>
                
                <!-- MAC addresses row -->
                <Label   Grid.Row="3" Grid.Column="0" Content="MAC Addresses" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Name="txtMACAddresses" TextWrapping="Wrap" AcceptsReturn="True" Style="{StaticResource txtStyle}"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Computer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource grpStyle}">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Computer manufacturer -->
                <Label   Grid.Row="0" Grid.Column="0" Content="Manufacturer" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="txtManufacturer" Style="{StaticResource txtStyle}"/>
                
                <!-- Computer model -->
                <Label   Grid.Row="1" Grid.Column="0" Content="Model" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtModel" Style="{StaticResource txtStyle}"/>
                
                <!-- Computer serial number -->
                <Label   Grid.Row="2" Grid.Column="0" Content="Serial Number" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="txtSerialNumber" Style="{StaticResource txtStyle}"/>
                
                <!-- Computer BIOS revision -->
                <Label   Grid.Row="3" Grid.Column="0" Content="BIOS Revision" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Name="txtBIOSRev" Style="{StaticResource txtStyle}"/>
                
                <!-- Computer SMBIOS ID -->
                <Label   Grid.Row="4" Grid.Column="0" Content="SMBIOS ID" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Name="txtSMBIOS" Style="{StaticResource txtStyle}"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="2" Grid.Column="0" Header="User Session" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource grpStyle}">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logged on User -->
                <Label   Grid.Row="0" Grid.Column="0" Content="Logged on User" Style="{StaticResource lblStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="txtLoggedOnUser" Style="{StaticResource txtStyle}"/>
            </Grid>
        </GroupBox>
        <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="WrapWithOverflow" Margin="5">
            The PC Info Tool is deployed to computers to assist help desk staff in troubleshooting connections to user computers.
        </TextBlock>
    </Grid>
</Window>
